<h1 class="display-4">Welcome to our store</h1>
<p class="lead">Please create an account to view and review our wonderful products.</p>
<hr class="my-4">
  <% if @products.any? %>
    
    <h4>Three Most Recent Products</h4>
    <ul>
      <% @products.three_most_recent.each do |product| %>
        <h3><li><%= link_to product.name, product_path(product) %></li></h3>
      <% end %>
    </ul>
    
    <br>
    <h4>Most Reviewed Product</h4>
    <% if @products.most_reviews.any? %>
      <ul>
        <% @products.most_reviews.each do |product| %>
          <h3><li><%= link_to product.name, product_path(product) %></li></h3>
        <% end %>
      </ul>
    <% else %>
      <p>There are no reviewed products<p>
    <% end %>
    
    <br>
    <h4>Products Made in USA</h4>
    <% if @products.usa.any? %>
      <ul>
        <% @products.usa.each do |product| %>
          <h3><li><%= link_to product.name, product_path(product) %></li></h3>
        <% end %>
      </ul>
    <% else %>
      <p>There are no products from USA yet</p>
    <% end %>

  <% else %>
        <p>There are no products yet.</p>
  <% end %>

  <br>        
  <p><%= link_to "See all our products", products_path, class: "btn btn-primary btn-lg"  %></p>


  <% if user_signed_in? %>
    <p><%= link_to "Logout", destroy_user_session_path, class: "btn btn-primary btn-lg" , :method => :delete %>
  <% else %>
    <p>You are not signed in.</p>
    <%= button_to "Sign up!", new_user_registration_path, class: "btn btn-primary btn-lg" %>
    <br/>
    <%= button_to "Login", new_user_session_path, class: "btn btn-primary btn-lg" %>
  <% end %>