<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :name, { class: "form-label"} %>
        <%= f.text_field :name, { class: "form-control"} %>
      </div>
      <div class="mb-3">
        <%= f.label :cost, { class: "form-label"}  %>
        <%= f.text_field :cost, { class: "form-control"}  %>
      </div>
      <div class="mb-3">
        <%= f.label :country_of_origin, { class: "form-label"}  %>
        <%= f.text_field :country_of_origin, { class: "form-control"}  %>
      </div>
      <br>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>